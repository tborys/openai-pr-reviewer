{
  "name": "openai-pr-reviewer",
  "version": "1.0.0",
  "description": "OpenAI-powered GitHub PR reviewer action",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && ncc build dist/main.js -o dist --source-map --license licenses.txt",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tborys/openai-pr-reviewer.git"
  },
  "keywords": [
    "github-action",
    "openai",
    "code-review",
    "pr-reviewer",
    "automation"
  ],
  "author": "Tomasz Borys",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.1.1",
    "openai": "^4.57.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
